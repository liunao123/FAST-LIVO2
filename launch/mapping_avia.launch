<launch>
<!-- Launch file for Livox AVIA LiDAR -->

	<arg name="rviz" default="true" />

	<rosparam command="load" file="$(find fast_livo)/config/avia_def.yaml" />

	<node pkg="fast_livo" type="fastlivo_mapping" name="laserMapping" output="screen">
		<rosparam file="$(find fast_livo)/config/camera_pinhole_hk.yaml" />
		<remap from="/left_camera/image" to="/hk_camera/image_color"/>
		
	</node>
	
	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_livo)/rviz_cfg/fast_livo2.rviz" />
	</group>

    <node pkg="rosbag" type="play" name="bag_play"  required="false"  output="log"  args="/home/bag/sync/v1_avia_hk/v1_avia_hk_20240712_1080_E.bag -d 3  -s 0 -r 1 "/>
    <!-- <node pkg="rosbag" type="play" name="bag_play"  required="false"  output="log"  args="/media/xf/csg-navs/bag/nc250110/v1_nc_x8_x2_2023-03-02-21-10-32.bag -d 3  -s 0 -r 0.5 "/>    -->
	
	<!-- <node pkg="image_transport" type="republish" name="republish" args="compressed in:=/left_camera/image raw out:=/left_camera/image" output="screen" respawn="true"/> -->

<!-- launch-prefix="gdb -ex run -args"
launch-prefix="valgrind -leak-check=full" -->
</launch> 	
